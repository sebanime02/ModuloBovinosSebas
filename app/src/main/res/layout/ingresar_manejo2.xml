<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.pablosanjuan.core.IngresarControl2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">




        <EditText
            android:id="@+id/edt_tratamiento6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tratamiento o Estrategia"
            android:inputType="textCapSentences|textImeMultiLine"/>
        <EditText
            android:id="@+id/edt_producto6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Producto"
            android:inputType="textCapSentences|textImeMultiLine"/>


        <TextView
            android:text="Observaciones"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <EditText
            android:id="@+id/edit_observaciones6"
            android:layout_width="match_parent"
            android:background="@color/blanco"
            android:layout_height="100dp"


            />


        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




            <Button
                android:id="@+id/btn_guardar_manejo"
                android:text="Guardar"
                android:background="#1abc21"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


        </RelativeLayout>



    </LinearLayout>
</ScrollView>
