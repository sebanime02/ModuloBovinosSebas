<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.pablosanjuan.core.IngresarControl2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <EditText
            android:id="@+id/edt_diagnostico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Diagnostico"
            android:inputType="textCapSentences|textImeMultiLine"/>
        <EditText
            android:id="@+id/edt_tratamiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tratamiento"
            android:inputType="textCapSentences|textImeMultiLine"/>
        <EditText
            android:id="@+id/edt_producto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Producto"
            android:inputType="textCapSentences|textImeMultiLine"/>
        <EditText
            android:id="@+id/edt_dosis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dosis"
            android:inputType="textCapSentences|textImeMultiLine"/>
        <EditText
            android:id="@+id/edt_frecuencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Frecuencia"
            android:inputType="textCapSentences|textImeMultiLine"/>
        <TextView
            android:text="Observaciones"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <EditText
            android:id="@+id/edit_observaciones"
            android:layout_width="match_parent"
            android:background="@color/blanco"
            android:layout_height="wrap_content"

            />




        <Button
            android:id="@+id/btn_guardar_Control"
            android:text="Guardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"/>
    </LinearLayout>
</ScrollView>
