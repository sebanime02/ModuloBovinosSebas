<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F2D4"
    android:paddingLeft="30dp"
    android:orientation="horizontal" >

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/vaca_logo"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:paddingLeft="80dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/registrocontrol1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registro"/>
        <TextView
            android:id="@+id/registrocontrol2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/registrocontrol1"
            android:text="Registro"/>
        <TextView
            android:id="@+id/registrocontrol3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/registrocontrol2"
            android:text="Registro"/>
        <TextView
            android:id="@+id/registrocontrol4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/registrocontrol3"
            android:text="Registro"/>

    </LinearLayout>
</LinearLayout>
