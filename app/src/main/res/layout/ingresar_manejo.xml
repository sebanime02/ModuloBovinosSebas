<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.pablosanjuan.core.IngresarManejo">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/foto_bovino"
                android:src="@drawable/vaca_logo"
                android:layout_width="200dp"
                android:layout_height="200dp" />
            <Button
                android:id="@+id/btn_siguiente6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Siguiente"
                android:onClick="onClick"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edt_id_bovino6"
                android:inputType="textCapSentences|textImeMultiLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ID"
                android:maxLines="1"/>
            <EditText
                android:id="@+id/edt_nombre_bovino6"
                android:inputType="textCapSentences|textImeMultiLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre Bovino"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_fecha6"
                android:text="Fecha Del Evento"
                android:onClick="onClick"
                android:gravity="left|center_vertical"
                style="@style/Base.Widget.AppCompat.ActionButton.Overflow"
                android:textColor="@color/negro" />
            <RadioGroup
                android:id="@+id/rdgGrupo6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/rdgCorte"
                    android:text="Corte de Ombligo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/rdgDescorne"
                    android:text="Descorne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/rdgCascos"
                    android:text="Arreglo de Cascos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:id="@+id/rdgCastracion"
                    android:text="Castraccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:id="@+id/rdgOtro"
                    android:text="Otro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RadioGroup>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>
    </ScrollView>